#!/bin/sh
# $1 - benchmark-folder
# $2 - domain
# $3 - instance
# $4 - max-budget
# $5 - exe-folder

echo "*****************************************************"

for method in LAO* FLARES; do
	for heuristic in AM1F FF hmin-heur-false; do			
		#echo "---$1/$2/simplified_joint/p$3/p$3-domain.pddl p$3 $method original $heuristic ---"
		$5/ER-UMD $1/$2/simplified_joint/p$3/p$3-domain-design-all.pddl p$3 $method original $heuristic
		echo ""
		echo "*****************************************************"
		echo ""

done
done	

for budget in $(seq 2 $4);do	
	for method in LAO* FLARES; do
		for approach in compilation rel-env; do
			for heuristic in AM1F FF hmin-heur-false; do
	
				#echo "---$1/$2/simplified_joint/p$3/p$3-domain-design-all.pddl p$3\-$budget-design $method $approach $heuristic ---"
				$5/ER-UMD $1/$2/simplified_joint/p$3/p$3-domain-design-all.pddl p$3\-$budget-design $method $approach $heuristic
				echo ""
				echo "*****************************************************"
				echo ""


done
done
done	
done




	

